<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>External</th>
      <th>Name</th>
      <th>Description</th>
      <th>Album</th>
      <th>Link</th>
      <th>Width</th>
      <th>Height</th>
      <th>Size</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.id %></td>
        <td><%= image.external_id %></td>
        <td><%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= image.album_id %></td>
        <td><%= image.link %></td>
        <td><%= image.width %></td>
        <td><%= image.height %></td>
        <td><%= image.size %></td>
        <td><%= image.type %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
