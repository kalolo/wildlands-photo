<div class="row">&nbsp;</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h1 class="docs-title" id="content">Users</h1>

          <table class="table table-responsive-sm">
            <thead>
            <tr>
              <th>id</th>
              <th>name</th>
              <th>email</th>
              <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.name %></td>
                  <td><%= u.email %></td>
                  <td></td>
                </tr>
            <% end %>
            </tbody>
          </table>


        </div>
      </div>
    </div>
  </div>
</div>